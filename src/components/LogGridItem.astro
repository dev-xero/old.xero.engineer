---
import { formatDistance } from "date-fns";
import "../styles/global.css"
const { title, description, banner, date } = Astro.props
---

<style>
    .grid-item {
        cursor: pointer;
        display: block;
        text-decoration: none;
    }

    .grid-item .image {
        position: relative;
    }

   .grid-item .image img {
        width: 100%;
        height: 240px;
        max-height: 240px;
        display: inline-flex;
    }

    .grid-item .image .badge {
        position: absolute;
        right: 20px;
        bottom: 20px;
        font-size: 16px;
        padding: 8px;
        background-color: hsla(0, 0%, 100%, 0.632);
        backdrop-filter: blur(10px);
        font-family: var(--font-main-700)
    }

    .max-two {
        width: 1fr !important;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .grid-item .title {
        font-size: 32px;
        font-family: var(--font-main-800) !important;
        margin: 8px 0px !important;
        cursor: pointer;
        text-decoration: none !important;
    }

    .grid-item:hover .title {
        text-decoration: underline !important;
    }

    .grid-item .description {
        margin: 0px !important;
        font-size: 18px;
        line-height: 24px;
        text-decoration: none !important;
        font-family: var(--font-main-700);
        color: var(--neutral-500);
    }

    @media screen and (max-width: 800px) {
        .grid-item .image img {
            height: 180px;
            max-height: 180px;
        }
    }
</style>

<a href="/" class="grid-item">
    <div class="image">
        <img src={banner} alt="image">
        <span class="badge">{ formatDistance(date, new Date(), { addSuffix: true })}<span/>
    </div>
    <p class="title max-two">{title}</p>
    <p class="description max-two">{description}</p>
</a>